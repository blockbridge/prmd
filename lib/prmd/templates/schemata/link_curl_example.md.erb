  <%-

    request_example = link['request_example'] || {}
    headers = request_example['headers'] || []
    params = request_example['params'] || {}
    href = request_example['href'] || 'FIXME'

    body = params
    get_params = []

    if link['method'].upcase == 'GET' && !params.nil?
      get_params = params.map { |(k, v)| "#{k}=#{v}" }
    end
  %>
<%- if link['method'].upcase != 'GET' %>
$ curl -X <%= link['method'] %> <%= href %><%- unless headers.empty? %> \<%- end %>
<%- else %>
$ curl <%= href %><%- unless headers.empty? %> \<%- end %>
<%- end %>
  <%- headers.each do |value| %>
  -H "<%= value %>"<%- if (!params.empty? || value != headers.last) %> \<%- end %>
  <%- end %>
<%- if !body.empty? && link['method'].upcase != 'GET' %>  -d \
'<%= JSON.pretty_generate(body) %>'
<%- elsif !get_params.empty? && link['method'].upcase == 'GET' %> -G \
  -d <%= get_params.join(" \\\n  -d ") %>
<%- end %>
